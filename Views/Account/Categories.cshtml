
@{
    ViewData["Title"] = "Edit Categories";
    var FormIndex = 0;
}
@model CategoriesViewModel

    <h1>Category</h1> <hr />
                      <table cellspacing="10" class="table">
                          <thead class="thead-dark">
                              <tr>
                                  <th scope="col">
                                      #
                                  </th>
                                  <th scope="col">
                                      Category Name
                                  </th>
                              </tr>
                          </thead>
                      @foreach (var Categories in Model.Categories)
                      {
                          <tr>
                              <form method="POST" action="/account/updateCategoryName">
                                  <th scope="row"> <input type="hidden" name="CategoryId" value=" @Categories.CategoryId" /> @FormIndex @{ FormIndex++;}</th>
                                  <td> <input type="text" name="CategoryName" value=" @Categories.CategoryName" /> </td>
                                  <td> <input type="submit" name="submit" value="Edit" /> </td>
                              </form>
                              <form method="POST" action="/account/removeCategoryName">
                                  <td>
                                      <input type="hidden" name="CategoryId" value=" @Categories.CategoryId" />
                                      <input type="submit" name="submit" value="Delete" />
                                  </td>
                              </form>
                          </tr>
                      }

                      <tr>
                          <form method="POST" action="/account/addCategoryName">
                              <td> Add new category name:  </td>
                              <td> <input type="text" name="CategoryName" placeholder="Category Name" /> </td>
                              <td> <input type="submit" name="submit" value="Add" /> </td>
                          </form>
                      </tr>
                 </table>
