@{
    ViewData["Title"] = "Register Page";
}

<h2>Login page</h2>

@model RegisterViewModel

<form method="post" asp-controller="Home" asp-action="RegisterAction">
    <input type="text" asp-for="Email" value="" placeholder="E-mail" />
    <br />
    <input type="text" asp-for="Username" value="" placeholder="Username"/>
    <br />
    <input type="password" asp-for="Password" value="" placeholder="Password"/>
    <br />
    <button type="submit">Register</button>
</form>